<Window x:Class="Models_Modifier_by_MainDen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Models_Modifier_by_MainDen"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStyle="None"
        MinWidth="400"
        MinHeight="74">
    <Window.Resources>
    </Window.Resources>
    <Grid Background="{DynamicResource BackgroundBrushKey}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="40" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Column="0" Background="{DynamicResource HighlightBrushKey}">
                <Button Background="{DynamicResource HighlightBrushKey}" Foreground="{DynamicResource TextBrushKey}" BorderThickness="0" FontSize="12" Padding="10,0" Content="File" />
                <Button Background="{DynamicResource HighlightBrushKey}" Foreground="{DynamicResource TextBrushKey}" BorderThickness="0" FontSize="12" Padding="10,0" Content="Edit" />
                <Button Background="{DynamicResource HighlightBrushKey}" Foreground="{DynamicResource TextBrushKey}" BorderThickness="0" FontSize="12" Padding="10,0" Content="Run" />
                <Button Background="{DynamicResource HighlightBrushKey}" Foreground="{DynamicResource TextBrushKey}" BorderThickness="0" FontSize="12" Padding="10,0" Content="Settings" />
                <Button Background="{DynamicResource HighlightBrushKey}" Foreground="{DynamicResource TextBrushKey}" BorderThickness="0" FontSize="12" Padding="10,0" Content="Extentions" />
                <Button Background="{DynamicResource HighlightBrushKey}" Foreground="{DynamicResource TextBrushKey}" BorderThickness="0" FontSize="12" Padding="10,0" Content="Help" />
            </StackPanel>
            <Button x:Name="buttonMinimize" Grid.Column="1" Background="{DynamicResource SystemBrushKey}" Foreground="{DynamicResource TextBrushKey}" BorderThickness="0" Content="_" />
            <Button Grid.Column="2" Background="{DynamicResource SystemBrushKey}" Foreground="{DynamicResource TextBrushKey}" BorderThickness="0" Content="Ll" />
            <Button x:Name="buttonClose" Grid.Column="3" Background="{DynamicResource SystemBrushKey}" Foreground="{DynamicResource TextBrushKey}" BorderThickness="0" Content="X" />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="3*" />
                </Grid.RowDefinitions>
                <ScrollViewer Grid.Row="0">
                    <StackPanel>

                    </StackPanel>
                </ScrollViewer>
                <GridSplitter Grid.Row="1" Height="3" Background="{DynamicResource BorderBrushKey}" ShowsPreview="False" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Button Background="{DynamicResource HighlightBrushKey}" Foreground="{DynamicResource TextBrushKey}" BorderThickness="0" FontSize="12" Padding="10,0" Height="30" Margin="10" Content="Apply" />
                    <ScrollViewer Grid.Row="1">
                        <StackPanel>

                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>
            <GridSplitter Grid.Column="1" Width="3" Background="{DynamicResource BorderBrushKey}" ShowsPreview="False" HorizontalAlignment="Center" VerticalAlignment="Stretch" />
            <GridSplitter Grid.Column="3" Width="3" Background="{DynamicResource BorderBrushKey}" ShowsPreview="False" HorizontalAlignment="Center" VerticalAlignment="Stretch" />
            <Grid Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="3*" />
                </Grid.RowDefinitions>
                <ScrollViewer Grid.Row="0">
                    <StackPanel>

                    </StackPanel>
                </ScrollViewer>
                <GridSplitter Grid.Row="1" Height="3" Background="{DynamicResource BorderBrushKey}" ShowsPreview="False" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Button Background="{DynamicResource HighlightBrushKey}" Foreground="{DynamicResource TextBrushKey}" BorderThickness="0" FontSize="12" Padding="10,0" Height="30" Margin="10" Content="Update" />
                    <ScrollViewer Grid.Row="1">
                        <StackPanel>

                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Grid>
        <UniformGrid Columns="3" Grid.Row="2" Background="{DynamicResource HighlightBrushKey}">
            <TextBlock Grid.Column="0" Foreground="{DynamicResource TextBrushKey}" FontSize="12" Padding="10,0" HorizontalAlignment="Left" VerticalAlignment="Center" Text="Execution time: 0.03301s" />
            <TextBlock Grid.Column="1" Foreground="{DynamicResource TextBrushKey}" FontSize="12" Padding="10,0" HorizontalAlignment="Left" VerticalAlignment="Center" Text="Status: Complete" />
            <TextBlock Grid.Column="1" Foreground="{DynamicResource TextBrushKey}" FontSize="12" Padding="10,0" HorizontalAlignment="Left" VerticalAlignment="Center" Text="File: D:\Model.xml" />
        </UniformGrid>
    </Grid>
</Window>
